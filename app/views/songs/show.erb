Title: <%= @song.title %>
Artist: <%= @song.artist %>
Genre: <%= @song.genre %>

<form method="get" action="/songs/<%=@song.id%>/edit">
  <input type="submit" value="edit">
</form>

<form action="/songs/<%=@song.id%>" method="post">
  <input type="hidden" value="delete" name="_method">
  <input type="submit" value="delete">
</form>
